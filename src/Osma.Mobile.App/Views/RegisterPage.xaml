<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Osma.Mobile.App.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <!--<Label
                FontSize="20"
                HorizontalOptions="Center"
                Text="Welcome to Osma"></Label>-->
            <Label Text="Welcome to the red.dot"/>
            <Label Text="To create your ID we will need to collect some personal information." />
            <Label Text="Let's start with your full name:" />
            <Entry Text="{Binding FullName}"
               x:Name="fullName"
               Placeholder="Please enter full name"
               PlaceholderColor="Olive"
               MaxLength="30"/>
            <Button 
                VerticalOptions="CenterAndExpand"
                Text="Create Wallet"
                Command="{Binding CreateWalletCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>